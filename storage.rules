rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================

    // Admin kontrol√º - Firestore'dan role bilgisi √ßekiliyor
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // üåü Super Admin kontrol√º
    function isSuperAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.get('isSuperAdmin', false) == true;
    }

    // Giri≈ü kontrol√º
    function isSignedIn() {
      return request.auth != null;
    }

    // Dosya boyutu kontrol√º (5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Resim formatƒ± kontrol√º (opsiyonel - ekstra g√ºvenlik)
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ========================================
    // BRANDING - ≈ûirket logolarƒ±
    // ========================================
    match /branding/{company}/{fileName} {
      // Herkes okuyabilir (logolar public)
      allow read: if true;

      // üåü Super admin ve admin yazabilir, max 5MB, sadece resim
      allow write: if (isSuperAdmin() || isAdmin()) && isValidSize() && isImage();
    }

    // ========================================
    // QUESTIONS - Soru g√∂rselleri
    // ========================================
    match /questions/{folder}/{fileName} {
      // Herkes okuyabilir (quiz'lerde g√∂sterilecek)
      allow read: if true;

      // üåü Super admin ve admin yazabilir, max 5MB, sadece resim
      allow write: if (isSuperAdmin() || isAdmin()) && isValidSize() && isImage();
    }

    // ========================================
    // CATCH-ALL: Diƒüer t√ºm dosyalar engellenir
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
